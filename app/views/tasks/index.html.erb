<h1>My tasks</h1>
<ul class="task-list">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa-solid fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %> Â·
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
        <i class="fa-solid fa-trash-can"></i> Delete
      <% end %>

    </li>
  <% end %>
</ul>
<hr>
<p><i class="fa-solid fa-plus"></i> <%= link_to "Add a new task", new_task_path %></p>
